<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.senthil.kotlin_bottomnavigationview">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.NavegacionLateral"
            android:label="@string/title_activity_navegacion_lateral"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <service
            android:name=".Activity.MyService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".Activity.Servicio"
            android:label="@string/title_activity_servicio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Eventos"
            android:label="@string/title_activity_eventos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.gesto"
            android:label="@string/title_activity_gesto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.multimedia"
            android:label="@string/title_activity_multimedia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.BottomNavigationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>